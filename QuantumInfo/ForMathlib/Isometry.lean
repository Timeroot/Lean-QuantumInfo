theorem LinearMap.IsSymmetric.orthogonalFamily_eigenspace_inf_eigenspace' {ùïú E : Type*} [RCLike ùïú]
  [NormedAddCommGroup E] [InnerProductSpace ùïú E] {A B : E ‚Üí‚Çó[ùïú] E}
  (hA : A.IsSymmetric) (hB : B.IsSymmetric) :
    OrthogonalFamily ùïú (fun (Œº‚ÇÅ‚ÇÇ : Eigenvalues A √ó Eigenvalues B) ‚Ü¶
      ‚Ü•(eigenspace A Œº‚ÇÅ‚ÇÇ.1 ‚äì eigenspace B Œº‚ÇÅ‚ÇÇ.2)) fun Œº‚ÇÅ‚ÇÇ ‚Ü¶
    (eigenspace A Œº‚ÇÅ‚ÇÇ.1 ‚äì eigenspace B Œº‚ÇÅ‚ÇÇ.2).subtype‚Çó·µ¢ := by
  have h := LinearMap.IsSymmetric.orthogonalFamily_eigenspace_inf_eigenspace hA hB
  simp only [OrthogonalFamily, Submodule.coe_subtype‚Çó·µ¢, Submodule.subtype_apply,
    Subtype.forall, Submodule.mem_inf, mem_genEigenspace_one, and_imp] at h ‚ä¢
  intro i j hij a ha hb a' ha' hb'
  contrapose! h
  simp only [Pairwise, ne_eq, Prod.forall, Prod.mk.injEq, not_and, not_forall]
  refine ‚ü®_, _, _, _, ?_, a, ha, hb, a', ha', hb', h‚ü©
