theorem LinearMap.IsSymmetric.directSum_isInternal_of_commute' {ùïú E : Type*} [RCLike ùïú]
  [NormedAddCommGroup E] [InnerProductSpace ùïú E] {A B : E ‚Üí‚Çó[ùïú] E} [FiniteDimensional ùïú E]
  (hA : A.IsSymmetric) (hB : B.IsSymmetric) (hAB : Commute A B) :
    DirectSum.IsInternal fun (Œº‚ÇÅ‚ÇÇ : Eigenvalues A √ó Eigenvalues B) ‚Ü¶
      eigenspace A Œº‚ÇÅ‚ÇÇ.1 ‚äì eigenspace B Œº‚ÇÅ‚ÇÇ.2 := by
  classical
  have h := LinearMap.IsSymmetric.directSum_isInternal_of_commute hA hB hAB
  constructor
  ¬∑ intro x y hxy
    -- Since the subspaces are orthogonal, the only way their sum can be zero is if each component is zero. Hence, x - y = 0, which implies x = y.
    rw [‚Üê sub_eq_zero]
    suffices h_diff_zero : ‚àÄ (x : DirectSum (Eigenvalues A √ó Eigenvalues B) fun Œº‚ÇÅ‚ÇÇ ‚Ü¶ ‚Ü•(eigenspace A Œº‚ÇÅ‚ÇÇ.1 ‚äì eigenspace B Œº‚ÇÅ‚ÇÇ.2)), x.coeAddMonoidHom _ = 0 ‚Üí x = 0 from
      h_diff_zero (x - y) (by simp [hxy])
    clear x y hxy; intro x hx;
    ext Œº‚ÇÅ‚ÇÇ
    simp only [DirectSum.zero_apply, ZeroMemClass.coe_zero]
    rw [‚Üê inner_self_eq_zero (ùïú := ùïú)]
    have h_inner_zero : inner ùïú (x Œº‚ÇÅ‚ÇÇ : E) (x.coeAddMonoidHom _) = 0 := by
      simp [hx]
    rw [‚Üê h_inner_zero]
    simp only [DirectSum.coeAddMonoidHom_eq_dfinsuppSum, ZeroMemClass.coe_zero, implies_true,
      DFinsupp.sum_eq_sum_fintype, DFinsupp.equivFunOnFintype_apply]
    -- Since the decomposition is orthogonal, the inner product of x Œº‚ÇÅ‚ÇÇ with any other component is zero. Therefore, the sum simplifies to just the inner product of x Œº‚ÇÅ‚ÇÇ with itself.
    rw [inner_sum, Finset.sum_eq_add_sum_diff_singleton (Finset.mem_univ Œº‚ÇÅ‚ÇÇ)]
    rw [Finset.sdiff_singleton_eq_erase, left_eq_add]
    apply Finset.sum_eq_zero
    intro Œº hŒº
    exact orthogonalFamily_eigenspace_inf_eigenspace' hA hB (Finset.ne_of_mem_erase hŒº).symm _ _
  ¬∑ -- Since the decomposition is orthogonal, the direct sum of the intersections is isomorphic to their sum. Therefore, the isomorphism implies that the sum is equal to E.
    have h_sum : ‚®Ü (Œº‚ÇÅ‚ÇÇ : Eigenvalues A √ó Eigenvalues B), eigenspace A Œº‚ÇÅ‚ÇÇ.1 ‚äì eigenspace B Œº‚ÇÅ‚ÇÇ.2 = ‚ä§ := by
      rw [eq_top_iff]
      intro x hx
      obtain ‚ü®y, rfl‚ü© := h.2 x
      rw [DirectSum.coeAddMonoidHom_eq_dfinsuppSum]
      refine Submodule.sum_mem _ fun i hi ‚Ü¶ ?_
      have hyi := Submodule.coe_mem (y i)
      simp only [Submodule.mem_inf, mem_genEigenspace_one] at hyi
      refine Submodule.mem_iSup_of_mem ‚ü®‚ü®i.2, ?_‚ü©, ‚ü®i.1, ?_‚ü©‚ü© (by simp)
      <;> simp only [HasUnifEigenvalue, ne_eq, Submodule.eq_bot_iff, mem_genEigenspace_one, not_forall]
      <;> refine ‚ü®y i, by tauto, by simpa using hi‚ü©
    intro x
    rw [Submodule.eq_top_iff'] at h_sum
    specialize h_sum x
    rw [Submodule.mem_iSup_iff_exists_finsupp] at h_sum
    rcases h_sum with ‚ü®f, hf‚ÇÅ, hf‚ÇÇ‚ü©
    exact ‚ü®‚àë i ‚àà f.support, .of _ i ‚ü®f i, hf‚ÇÅ i‚ü©, by simpa using hf‚ÇÇ‚ü©

end commute_module

