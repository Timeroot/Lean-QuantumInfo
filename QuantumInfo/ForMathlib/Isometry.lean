/-- Variant of `iSup_mono'` that allows for an easier handling of bottom elements. -/
theorem iSup_mono_bot {Œ± : Type*} {Œπ Œπ' : Sort*} [CompleteLattice Œ±]
  {f : Œπ ‚Üí Œ±} {g : Œπ' ‚Üí Œ±} (h : ‚àÄ (i : Œπ), f i = ‚ä• ‚à® ‚àÉ i', f i ‚â§ g i') :
    iSup f ‚â§ iSup g := by
  rcases isEmpty_or_nonempty Œπ'
  ¬∑ simp only [IsEmpty.exists_iff, or_false] at h
    simp [h]
  ¬∑ refine iSup_mono' (fun i ‚Ü¶ ?_)
    rcases h i with h | h <;> simp [h]

noncomputable def Commute.isSymmetric_directSumDecomposition  {ùïú E : Type*} [RCLike ùïú]
